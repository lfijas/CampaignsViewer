<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="CampaignListHeader">
    <item name="android:textColor">@android:color/black</item>
    <item name="android:textSize">@dimen/campaigns_list_header_text_size</item>
    <item name="android:textStyle">bold</item>
    <item name="android:layout_margin">@dimen/campaigns_list_name_margin</item>
  </style>

  <style name="CampaignDetailsHeader">
    <item name="android:textColor">@android:color/black</item>
    <item name="android:textSize">@dimen/campaign_details_header_text_size</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="CampaignDetailsDescription">
    <item name="android:textColor">@android:color/black</item>
    <item name="android:textSize">@dimen/campaign_details_description_text_size</item>
  </style>

</resources>
